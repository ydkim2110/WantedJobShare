<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_out_confirm_text"
        android:layout_above="@+id/sign_out_confirm_btn"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sign_out_confirm_btn"
        android:text="로그아웃"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_button"/>

    <ProgressBar
        android:id="@+id/sign_out_progressBar"
        android:layout_below="@+id/sign_out_confirm_btn"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sign_out_progressBar_text"
        android:layout_below="@+id/sign_out_progressBar"
        android:text="로그아웃..."
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>